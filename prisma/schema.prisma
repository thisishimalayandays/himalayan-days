// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  role      String   @default("ADMIN") // "ADMIN", "SALES"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Package {
  id            String   @id @default(cuid())
  slug          String   @unique
  title         String
  duration      String
  startingPrice Int
  priceRange    String?
  image         String
  gallery       String // JSON stringified array of URLs
  category      String
  location      String
  features      String // JSON stringified array
  overview      String
  itinerary     String // JSON stringified array of objects
  inclusions    String // JSON stringified array
  exclusions    String // JSON stringified array
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  rating        Float    @default(4.5)
  reviews       Int      @default(0)
}

model Destination {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  image       String
  description String
  rating      Float
  reviews     Int
  wikipediaUrl String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Inquiry {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String
  customerId String?
  customer   Customer? @relation(fields: [customerId], references: [id])
  destination String?
  startDate DateTime?
  travelers Int?
  budget    String?
  message   String?
  type      String   // "GENERAL" or "PACKAGE_BOOKING"
  packageId String?
  status    String   @default("PENDING") // "PENDING", "CONTACTED", "INTERESTED", "BOOKED", "CLOSED", "SPAM"
  notes     String?  // Internal notes for sales team
  followUpDate DateTime?
  isDeleted Boolean  @default(false)
  deletedAt DateTime?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Subscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  isActive  Boolean  @default(true)
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Customer {
  id        String    @id @default(cuid())
  name      String
  email     String?
  phone     String    @unique
  address   String?
  notes     String?
  bookings  Booking[]
  inquiries Inquiry[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Booking {
  id          String    @id @default(cuid())
  customerId  String
  customer    Customer  @relation(fields: [customerId], references: [id])
  
  title       String    // e.g. "Kashmir Family Trip"
  packageId   String?   // Optional link to Package
  
  status      String    @default("CONFIRMED") // CONFIRMED, COMPLETED, CANCELLED, PENDING
  travelDate  DateTime
  duration    String?   // e.g. "5 Days"
  adults      Int       @default(2)
  kids        Int       @default(0)
  
  // New Fields for Detailed Itinerary
  hotelInfo     String?   @db.Text // Details about hotels/houseboats
  mealPlan      String?   // e.g. MAP (Breakfast + Dinner)
  transportInfo String?   // e.g. Innova Crysta for 6 days
  notes         String?   @db.Text // Internal or Customer notes
  
  totalAmount Float
  
  payments    Payment[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  isDeleted   Boolean   @default(false)
  deletedAt   DateTime?

  expenses    BookingExpense[]
}

model BookingExpense {
  id          String   @id @default(cuid())
  bookingId   String
  booking     Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  title       String   // Beneficiary Name (e.g. Hotel Milan, Driver Ramesh)
  category    String   // HOTEL, TRANSPORT, MISC
  totalCost   Float?   // Total agreed amount (reference)
  amount      Float    // Amount paid in this transaction
  date        DateTime @default(now())
  paymentMode String   // CASH, UPI, BANK_TRANSFER
  notes       String?
  createdAt   DateTime @default(now())
}

model Payment {
  id          String   @id @default(cuid())
  bookingId   String
  booking     Booking  @relation(fields: [bookingId], references: [id])
  amount      Float
  date        DateTime @default(now())
  method      String   // UPI, BANK_TRANSFER, CASH
  referenceId String?
  notes       String?
  createdAt   DateTime @default(now())
}

model Job {
  id           String           @id @default(cuid())
  slug         String           @unique
  title        String?
  status       String           @default("OPEN") // OPEN, CLOSED, ON_HOLD
  applications JobApplication[]
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
}

model JobApplication {
  id          String   @id @default(cuid())
  jobId       String
  job         Job      @relation(fields: [jobId], references: [id])
  name        String
  email       String
  phone       String
  resumeData  Bytes?   // Stored as bytes
  resumeName  String?
  resumeType  String?
  coverLetter String?
  status      String   @default("NEW") // NEW, REVIEWED, INTERVIEWING, REJECTED, HIRED
  isRead      Boolean  @default(false)
  appliedAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Quote {
  id          String   @id @default(cuid())
  name        String
  clientName  String?
  data        Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Itinerary {
  id          String   @id @default(cuid())
  name        String
  clientName  String?
  data        Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model AuditLog {
  id           String   @id @default(cuid())
  action       String
  resourceId   String?
  resourceType String   @default("Inquiry")
  details      String?
  userId       String?
  userEmail    String?
  userName     String?
  userRole     String?
  createdAt    DateTime @default(now())
}

model Hotel {
  id        String   @id @default(cuid())
  name      String
  location  String
  type      String   // Hotel, Houseboat
  stars     Int      // 3, 4, 5
  image     String?
  address   String?
  contact   String? // Existing generic contact field
  email     String?
  phone     String?
  rooms     RoomType[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}


model RoomType {
  id          String   @id @default(cuid())
  hotelId     String
  hotel       Hotel    @relation(fields: [hotelId], references: [id], onDelete: Cascade)
  name        String   // Deluxe, Suite
  baseRate    Float    @default(0) // Standard EP rate or base
  priceEP     Float    @default(0) // European Plan (Room Only)
  priceCP     Float    @default(0) // Continental Plan (Bed & Breakfast)
  priceMAP    Float    @default(0) // Modified American Plan (Breakfast + Lunch/Dinner)
  priceAP     Float    @default(0) // American Plan (All Meals)
  extraBed    Float    @default(0) // Cost for extra bedding (fallback)
  extraBedEP  Float    @default(0)
  extraBedCP  Float    @default(0)
  extraBedMAP Float    @default(0)
  extraBedAP  Float    @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  rates       RoomRate[]
}

model RoomRate {
  id          String   @id @default(cuid())
  roomTypeId  String
  roomType    RoomType @relation(fields: [roomTypeId], references: [id], onDelete: Cascade)
  validFrom   DateTime
  validTo     DateTime
  priceEP     Float    @default(0)
  priceCP     Float    @default(0)
  priceMAP    Float    @default(0)
  priceAP     Float    @default(0)
  extraBed    Float    @default(0)
  extraBedEP  Float    @default(0)
  extraBedCP  Float    @default(0)
  extraBedMAP Float    @default(0)
  extraBedAP  Float    @default(0)
  bookingValidUntil DateTime? // Book By Date
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt


}

model Transport {
  id        String   @id @default(cuid())
  name      String   // Innova, Tempo Traveller
  type      String   // SUV, Sedan, Mini Bus
  rate      Float    @default(0) // Rate per day
  capacity  Int      @default(4) // Number of seats
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
