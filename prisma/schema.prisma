// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Package {
  id            String   @id @default(cuid())
  slug          String   @unique
  title         String
  duration      String
  startingPrice Int
  image         String
  gallery       String // JSON stringified array of URLs
  category      String
  location      String
  features      String // JSON stringified array
  overview      String
  itinerary     String // JSON stringified array of objects
  inclusions    String // JSON stringified array
  exclusions    String // JSON stringified array
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  rating        Float    @default(4.5)
  reviews       Int      @default(0)
}

model Destination {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  image       String
  description String
  rating      Float
  reviews     Int
  wikipediaUrl String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Inquiry {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String
  destination String?
  startDate DateTime?
  travelers Int?
  budget    String?
  message   String?
  type      String   // "GENERAL" or "PACKAGE_BOOKING"
  packageId String?
  status    String   @default("PENDING") // "PENDING", "CONTACTED", "CONVERTED", "CLOSED"
  isDeleted Boolean  @default(false)
  deletedAt DateTime?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Subscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}
