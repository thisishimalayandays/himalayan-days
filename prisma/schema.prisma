// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Package {
  id            String   @id @default(cuid())
  slug          String   @unique
  title         String
  duration      String
  startingPrice Int
  priceRange    String?
  image         String
  gallery       String // JSON stringified array of URLs
  category      String
  location      String
  features      String // JSON stringified array
  overview      String
  itinerary     String // JSON stringified array of objects
  inclusions    String // JSON stringified array
  exclusions    String // JSON stringified array
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  rating        Float    @default(4.5)
  reviews       Int      @default(0)
}

model Destination {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  image       String
  description String
  rating      Float
  reviews     Int
  wikipediaUrl String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Inquiry {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String
  customerId String?
  customer   Customer? @relation(fields: [customerId], references: [id])
  destination String?
  startDate DateTime?
  travelers Int?
  budget    String?
  message   String?
  type      String   // "GENERAL" or "PACKAGE_BOOKING"
  packageId String?
  status    String   @default("PENDING") // "PENDING", "CONTACTED", "CONVERTED", "CLOSED"
  isDeleted Boolean  @default(false)
  deletedAt DateTime?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Subscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  isActive  Boolean  @default(true)
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Customer {
  id        String    @id @default(cuid())
  name      String
  email     String?
  phone     String    @unique
  address   String?
  notes     String?
  bookings  Booking[]
  inquiries Inquiry[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Booking {
  id          String    @id @default(cuid())
  customerId  String
  customer    Customer  @relation(fields: [customerId], references: [id])
  
  title       String    // e.g. "Kashmir Family Trip"
  packageId   String?   // Optional link to Package
  
  status      String    @default("CONFIRMED") // CONFIRMED, COMPLETED, CANCELLED, PENDING
  travelDate  DateTime
  duration    String?   // e.g. "5 Days"
  adults      Int       @default(2)
  kids        Int       @default(0)
  
  totalAmount Float
  
  payments    Payment[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  isDeleted   Boolean   @default(false)
  deletedAt   DateTime?
}

model Payment {
  id          String   @id @default(cuid())
  bookingId   String
  booking     Booking  @relation(fields: [bookingId], references: [id])
  amount      Float
  date        DateTime @default(now())
  method      String   // UPI, BANK_TRANSFER, CASH
  referenceId String?
  notes       String?
  createdAt   DateTime @default(now())
}

model Job {
  id           String           @id @default(cuid())
  slug         String           @unique
  title        String?
  status       String           @default("OPEN") // OPEN, CLOSED, ON_HOLD
  applications JobApplication[]
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
}

model JobApplication {
  id          String   @id @default(cuid())
  jobId       String
  job         Job      @relation(fields: [jobId], references: [id])
  name        String
  email       String
  phone       String
  resumeData  Bytes?   // Stored as bytes
  resumeName  String?
  resumeType  String?
  coverLetter String?
  status      String   @default("NEW") // NEW, REVIEWED, INTERVIEWING, REJECTED, HIRED
  appliedAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
